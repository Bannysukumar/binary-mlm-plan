{
  "name": "binary-mlm-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Production-ready Binary MLM Platform with Whitelabel Support",
  "workspaces": [
    "frontend",
    "functions"
  ],
  "scripts": {
    "build": "cd frontend && npm run build",
    "create:admin": "node scripts/create-admin-simple.js",
    "deploy:indexes": "firebase deploy --only firestore:indexes",
    "dev": "cd frontend && npm run dev",
    "functions:deploy": "cd functions && npm run deploy",
    "functions:serve": "cd functions && npm run serve",
    "setup:admin": "node scripts/create-admin.js",
    "start": "cd frontend && npm run start"
  },
  "dependencies": {
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "firebase": "12.7.0",
    "firebase-functions": "7.0.2",
    "immer": "latest",
    "lucide-react": "0.562.0",
    "next": "16.1.1",
    "qrcode.react": "4.2.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hot-toast": "2.6.0",
    "recharts": "3.6.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7",
    "tw-animate-css": "1.4.0",
    "use-sync-external-store": "latest",
    "zustand": "5.0.9"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "firebase-admin": "^13.6.0",
    "postcss": "8.5.6",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}